<% content_for :title, " - Edycja uzytkownika." %>
<% content_for :menu, "admin" %>

<br>
<div class="row">
  <div class="large-12 columns">
    <div class="callout" align="center">
      <h3>Edycja użytkownika</h3>
    </div>
  </div>
</div>

<%= form_for @user, :url => { :action => "update" } do |f| %>

  <div class="row">
    <div class="large-12 columns">
      <div class="callout" align="center">
        <div class="form-inputs">
          <div class="input-group">
            <span class="input-group-label">Email</span>
            <%= f.text_field :email, type:"text", autofocus: true, class:"input-group-field", placeholder: "email" %>
          </div>
          <div class="input-group">
            <span class="input-group-label">Imię</span>
            <%= f.text_field :first_name, type:"text", class:"input-group-field" %>
          </div>
          <div class="input-group">
            <span class="input-group-label">Nazwisko</span>
            <%= f.text_field :last_name, type:"text", class:"input-group-field" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <div class="callout" align="center">
        <%= f.submit :Zatwierdź, class:"button success" %>
      </div>
    </div>
  </div>
    <% end %>
