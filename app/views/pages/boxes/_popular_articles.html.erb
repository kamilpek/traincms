<div class="row column">
  <div class="callout">
    <p class="lead">NAJPOPULARNIEJSZE ARTYKU≈ÅY</p>
    <% @articles.order("visit desc").take(5).each do |article| %>
    <div class="media-object">
      <div class="media-object-section">
        <% if article.image? %>
          <%= image_tag(article.image.url, size: "100x100") %>
        <% end %>
      </div>
      <div class="media-object-section">
        <h5> <%= link_to article.title, article %> </h5>
        <h6> <i class="fi-torso" > <%= User.where(id:article.user_id).pluck(:first_name).last %>
             <%= User.where(id:article.user_id).pluck(:last_name).last %> </i> </h6>
      </div>
    </div>
    <% end %>
  </div>
</div>
