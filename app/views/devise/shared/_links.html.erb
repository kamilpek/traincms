<%- if controller_name != 'sessions' %>
  <%= link_to "Logowanie", new_session_path(resource_name), class:"warning button" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Rejestracja", new_registration_path(resource_name), class:"warning button" %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Zapomniałeś hasła?", new_password_path(resource_name), class:"alert button" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Nie otrzymałeś instrukcji potwierdzenia?", new_confirmation_path(resource_name), class:"alert button" %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Nie otrzymałeś wiadomości aktywującej?", new_unlock_path(resource_name), class:"alert button" %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Logowanie z #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class:"button" %><br />
  <% end -%>
<% end -%>
