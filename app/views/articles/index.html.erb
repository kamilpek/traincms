<% content_for :title, " - Lista Artykułów." %>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Tytuł</th>
      <th>Kategoria</th>
      <th>Aktwny</th>
      <th>Wstęp</th>
      <th>Treść</th>
      <th>Wyświetlenia</th>
      <th>Wyróżniony</th>
      <th>Autor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= Category.where(id:article.category).pluck(:title).last %></td>
        <td><%= article.active %></td>
        <td><%= article.intro %></td>
        <td><%= article.content %></td>
        <td><%= article.visit %></td>
        <td><%= article.highlight %></td>
        <td><%= article.user_id %></td>
        <td><%= link_to 'Pokaż', article, class:"button tiny" %></td>
        <td><%= link_to 'Edytuj', edit_article_path(article), class:"button tiny" %></td>
        <td><%= link_to 'Usuń', article, method: :delete, data: { confirm: 'Are you sure?' }, class:"button tiny" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p><%= will_paginate @articles, renderer: FoundationPagination::Rails %></p>
<br>

<%= link_to 'Nowy Artykuł', new_article_path, class:'success button' %>
