<br>
<div class="row">
  <div class="medium-4 columns">
    <div class="callout" align="center">
      <%= link_to calendar_path(date: @date - 1.month), class: "button" do %>
        <i class="fi-calendar"> Poprzedni Miesiąc</i>
      <% end %>
    </div>
  </div>
  <div class="medium-4 columns">
    <div class="callout" align="center">
      <h3 id="month"><%= l(@date, format: :calendar) %></h3>
    </div>
  </div>
  <div class="medium-4 columns">
    <div class="callout" align="center">
      <%= link_to calendar_path(date: @date + 1.month), class: "button" do %>
        <i class="fi-calendar"> Następny Miesiąc</i>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="medium-12 columns">
    <div class="callout">
      <%= calendar @date do |date| %>
        <%= date.day %>
        <% @articles.order("created_at desc").each do |article| %>
          <% if date.strftime("%Y-%m-%d") == article.created_at.strftime("%Y-%m-%d") %>
            <ul>
              <li><%= link_to article.title, article %></li>
            </ul>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
